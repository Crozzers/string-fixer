{
  "name": "string-fixer",
  "displayName": "string-fixer",
  "description": "Replace double quotes with single quotes in Python files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "ms-python.python"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:python"
  ],
  "contributes": {
    "commands": [
      {
        "command": "string-fixer.run",
        "title": "string-fixer: Run"
      }
    ],
    "configuration": {
      "properties": {
        "string-fixer.folder": {
          "default": null,
          "markdownDescription": "Folder containing the pyproject.toml configuration file",
          "type": "string"
        },
        "string-fixer.preFormatter": {
          "default": null,
          "markdownDescription": "The formatter to trigger before running string-fixer",
          "type": ["string", "null"],
          "enum": ["ruff", "black"]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
